{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "src/**/*.ts"
    ]
}